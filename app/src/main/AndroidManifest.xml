<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vadimbliashuk.instagramclone">

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.registration_and_login.activity.RegistrationOrLoginActivity"></activity>
        <activity android:name=".ui.yyy_activities.sign_up_activity.SignUpActivity" />
        <activity android:name=".ui.yyy_activities.SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.main_ui.activities.ProfileSettingActivity" />
        <activity android:name=".ui.main_ui.activities.AddPostActivity" />
        <activity
            android:name=".ui.main_ui.activities.MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>